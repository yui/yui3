{
    "resize": {
        "use": [ "resize-base", "resize-proxy", "resize-constrain" ],
        "plugins": {
            "resize-plugin": {
                "requires": [
                    "resize-base",
                    "plugin"
                ],

                "optional": [
                    "resize-constrain"
                ]
            }
        },
        "submodules": {

            "resize-base": {
                "requires": [
                    "base",
                    "widget",
                    "event",
                    "oop",
                    "dd-drag",
                    "dd-delegate",
                    "dd-drop"
                ],
                "skinnable": true
            },

            "resize-constrain": {
                "requires": [
                    "plugin",
                    "resize-base"
                ]
            },

            "resize-proxy": {
                "requires": [
                    "plugin",
                    "resize-base"
                ]
            }
        }
    }
}
