{
    "scrollview" : {
    
        "plugins" : {
            "scrollview-base" : {
                "requires" : [
                    "widget",
                    "event-gestures",
                    "transition"
                ],
                "skinnable" : true,
                "path": "scrollview/scrollview-base-min.js"
            },
            "scrollview-base-ie": {
                "requires": [
                    "scrollview-base"
                ],
                "condition": {
                   "trigger": "scrollview-base",
                   "ua": "ie"
                }
            },
            "scrollview-scrollbars" : {
                "requires" : [
                    "plugin"
                ],
                "skinnable" : true,
                "path": "scrollview/scrollview-scrollbars-min.js"
            },
            "scrollview-paginator" : {
                "requires" : [
                    "plugin"
                ],
                "skinnable" : true,
                "path": "scrollview/scrollview-paginator-min.js"
            }
        },
        "requires" : [
            "scrollview-base",
            "scrollview-scrollbars"
        ]
    }
}