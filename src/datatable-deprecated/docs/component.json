{
    "name": "datatable-deprecated",
    "displayName": "DataTable (deprecated version)",
    "description": "The DataTable widget displays screen-reader accessible tabular data on a web page. Plugins add functionality such as sorting and scrolling. This component exists for backward compatibility with YUI 3.4.1.  Please use the updated datatable module and components.",

    "author": ["jenny", "lsmith"],

    "use": ["datatable-deprecated"],
    "tags": ["beta", "widget", "datatable", "deprecated"],

    "examples": [

        {
            "name": "datatable-basic",
            "displayName": "Basic DataTable",
            "modules": ["datatable-deprecated"],
            "description": "This example illustrates simple DataTable use cases.",
	        "useModules": ["datatable-base-deprecated"],

            "hideTableOfContents": true
        },

        {
            "name": "datatable-dsget",
            "displayName": "DataTable + DataSource.Get + JSON Data",
            "modules": ["datatable-deprecated"],
            "description": "DataTable loaded with JSON data from a remote webservice via DataSource.Get",
	        "useModules": ["datasource-get", "datasource-jsonschema","datatable-base-deprecated","datatable-datasource-deprecated"],

            "hideTableOfContents": true
        },

        {
            "name": "datatable-dsio",
            "displayName": "DataTable + DataSource.IO + XML Data",
            "modules": ["datatable-deprecated"],
            "description": "DataTable loaded with XML data from a remote webservice via DataSource.IO.",
	        "useModules": ["datasource-io", "datasource-xmlschema","datatable-base-deprecated","datatable-datasource-deprecated"],

            "hideTableOfContents": true
        },

        {
            "name": "datatable-formatting",
            "displayName": "Formatting Row Data for Display",
            "modules": ["datatable-deprecated"],
            "description": "Custom format data for display.",
	        "useModules": ["datatype-date", "datatable-base-deprecated"],

            "hideTableOfContents": true
        },

        {
            "name": "datatable-nestedcols",
            "displayName": "Nested Column Headers",
            "modules": ["datatable-deprecated"],
            "description": "DataTable with nested column headers.",
	        "useModules": ["datatable-base-deprecated"],

            "hideTableOfContents": true
        },

        {
            "name": "datatable-sort",
            "displayName": "Column Sorting",
            "modules": ["datatable-deprecated"],
            "description": "DataTable with column sorting.",
	        "useModules": ["datatable-sort-deprecated"],

            "hideTableOfContents": true
        },

        {
            "name": "datatable-scroll",
            "displayName": "Scrolling DataTable",
            "modules": ["datatable-deprecated"],
            "description": "DataTable with vertical and/or horizontal scrolling rows.",
	        "useModules": ["datatable-scroll-deprecated"],

            "hideTableOfContents": true
        }
    ]
}
