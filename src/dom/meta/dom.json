{
    "dom": {
        "use": [
            "dom-base",
            "dom-screen",
            "dom-style",
            "selector-native",
            "selector"
        ],

        "plugins": {
            "selector-css3": {
                "requires": [
                    "selector-native",
                    "selector-css2"
                ]
            },
            "dom-style-ie": {
                "requires": [
                    "dom-style"
                ],
                "condition": {
                   "trigger": "dom-style",
                   "test": "ie-style-test.js"
                }
            },

            "dom-deprecated": {
                "requires": [
                    "dom-base"
                ]
            },

            "selector-css2": {
                "requires": [
                    "selector-native"
                ],
                "condition": {
                   "trigger": "selector",
                   "test": "selector-test.js"
                }
            }
        },

        "submodules": {
            "dom-core": {
                "requires": [
                    "oop",
                    "features"
                ]
            },
            "dom-base": {
                "requires": [
                    "dom-core"
                ]
            },
            "dom-screen": {
                "requires": [
                    "dom-base",
                    "dom-style"
                ]
            },
            "dom-style": {
                "requires": [
                    "dom-base",
                    "color-base"
                ]
            },
            "selector-native": {
                "requires": [
                    "dom-base"
                ]
            },
            "selector": {
                "requires": [
                    "selector-native"
                ]
            }
        }
    }
}
