#demo {
    height: 200px;
}
#demo em {
    display: block;
    float: left;
    font-style:normal;
    text-align:center;
    width: 80px;
    height: 40px;
    line-height:40px;
    border: 1px solid #000;
    margin: 6px 0;
    color:#99CCCC;
    font-size:150%;
    -moz-box-shadow:4px 4px 7px rgba(0,0,0, 0.4);
    -webkit-box-shadow:4px 4px 7px rgba(0,0,0, 0.4);
    box-shadow:4px 4px 7px rgba(0,0,0, 0.4);
    -moz-border-radius:3px;
    -webkit-border-radius:3px;
    cursor: move;
}
