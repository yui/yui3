{
    "name": "loader",
    "exec": [
        "./scripts/fetch_gallery_version.js"
    ],
    "postexec": [
        "./scripts/build_loader_tests.js"
    ],
    "builds": {
        "loader-base": {
            "replace": {
                "@GALLERY@": "gallery-2013.02.27-21-03",
                "@TNT@": "4",
                "@YUI2@": "2.9.0"
            },
            "jsfiles": [
                "meta.js",
                "loader.js"
            ]
        },
        "loader-yui3": {
            "exec": [
                "yogi loader --yes --mix --start ../"
            ],
            "jsfiles": [
                "yui3.js"
            ]
        },
        "loader-rollup": {
            "jsfiles": [
                "rollup.js"
            ]
        }
    },
    "rollups": {
        "loader": {
            "files": [
                "loader-base",
                "loader-rollup",
                "loader-yui3"
            ]
        }
    }
}
