/** Output Styles **/
.picker-output {
    margin: 15px;
}

.picker-output ul {
    margin: 0;
    padding: 0;
}
.picker-output li {
    list-style: none;
    line-height: 1.8em;
}

.picker-output .swatch {
    width: 1em;
    height: 1em;
    margin-left: 0.5em;
    vertical-align: middle;
    position: relative;
}
.tooltip {
    position: absolute;
    top: 1.3em;
    left: 0;
    background: #ffefc2;
    border: 1px solid #f5b400;
    padding: 10px;
    z-index: 10;
}
.tooltip li {
    white-space: nowrap;
}
